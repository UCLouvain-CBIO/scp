# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[*.R]
indent_style = space
indent_size = 4
max_line_length = 80

[*.Rmd]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
